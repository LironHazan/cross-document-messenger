{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2020",
    "lib": ["dom", "es2020"],
    "target": "es2020",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./lib",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist/cross-document-messenger"
  },
  "include": [
    "lib/**/*.ts",
    "lib/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
