{
  "include": ["lib", "types"],
  "compilerOptions": {
    "module": "es2020",
    "lib": ["dom", "es2020"],
    "target": "es2020",
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "rootDir": "./lib",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
